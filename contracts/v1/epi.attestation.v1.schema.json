{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.attestation.v1.schema.json",
  "title": "EPI Attestation v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.attestation.v1"
    },
    "attestation_id": {
      "type": "string",
      "minLength": 1
    },
    "signoff_id": {
      "type": "string",
      "minLength": 1
    },
    "signer": {
      "type": "string",
      "minLength": 1
    },
    "method": {
      "type": "string",
      "enum": [
        "self_attest",
        "external"
      ]
    },
    "statement": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "schema_version",
    "attestation_id",
    "signoff_id",
    "signer",
    "method",
    "statement",
    "created_at"
  ]
}
