{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.signoff.v1.schema.json",
  "title": "EPI Signoff v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.signoff.v1"
    },
    "signoff_id": {
      "type": "string",
      "minLength": 1
    },
    "decision_id": {
      "type": "string",
      "minLength": 1
    },
    "reviewer": {
      "type": "string",
      "minLength": 1
    },
    "disposition": {
      "type": "string",
      "enum": [
        "approved",
        "rejected"
      ]
    },
    "signed_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "schema_version",
    "signoff_id",
    "decision_id",
    "reviewer",
    "disposition",
    "signed_at"
  ]
}
