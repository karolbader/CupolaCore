{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.runlog.v1.schema.json",
  "title": "EPI Runlog v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.runlog.v1"
    },
    "schema": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "inputs": {
      "type": "object"
    },
    "steps": {
      "type": "array"
    },
    "stop_reason": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "schema_version",
    "schema",
    "run_id",
    "created_at",
    "inputs",
    "steps",
    "stop_reason"
  ]
}
