{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.decision_pack.v1.schema.json",
  "title": "EPI Decision Pack v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.decision_pack.v1"
    },
    "decision_id": {
      "type": "string",
      "minLength": 1
    },
    "claim_set_id": {
      "type": "string",
      "minLength": 1
    },
    "verdict": {
      "type": "string",
      "enum": [
        "allow",
        "deny",
        "review"
      ]
    },
    "rationale": {
      "type": "string",
      "minLength": 1
    },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "required": [
    "schema_version",
    "decision_id",
    "claim_set_id",
    "verdict",
    "rationale",
    "evidence_refs"
  ]
}
