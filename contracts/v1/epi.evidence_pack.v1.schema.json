{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.evidence_pack.v1.schema.json",
  "title": "EPI Evidence Pack v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.evidence_pack.v1"
    },
    "vault_id": {
      "type": "string",
      "minLength": 1
    },
    "vault_snapshot_id": {
      "type": "string",
      "minLength": 1
    },
    "source_manifest": {
      "type": "object"
    },
    "query_log": {
      "type": [
        "object",
        "array"
      ]
    },
    "hits": {
      "type": "array"
    },
    "source_extracts": {
      "type": "array"
    }
  },
  "required": [
    "schema_version",
    "vault_id",
    "vault_snapshot_id",
    "source_manifest",
    "query_log",
    "hits",
    "source_extracts"
  ]
}
