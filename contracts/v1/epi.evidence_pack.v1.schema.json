{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.evidence_pack.v1.schema.json",
  "title": "EPI Evidence Pack v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.evidence_pack.v1"
    },
    "pack_id": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "extracts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/extract"
      }
    }
  },
  "required": [
    "schema_version",
    "pack_id",
    "run_id",
    "created_at",
    "extracts"
  ],
  "$defs": {
    "source_ref": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "vault_id": {
          "type": "string",
          "minLength": 1
        },
        "rel_path": {
          "type": "string",
          "minLength": 1
        },
        "content_hash": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "vault_id",
        "rel_path",
        "content_hash"
      ]
    },
    "extract": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "extract_id": {
          "type": "string",
          "minLength": 1
        },
        "extract_hash": {
          "type": "string",
          "minLength": 1
        },
        "source": {
          "$ref": "#/$defs/source_ref"
        },
        "excerpt": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "extract_id",
        "extract_hash",
        "source",
        "excerpt"
      ]
    }
  }
}
