{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.seal.v1.schema.json",
  "title": "EPI Seal v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.seal.v1"
    },
    "seal_id": {
      "type": "string",
      "minLength": 1
    },
    "algorithm": {
      "type": "string",
      "enum": [
        "sha256",
        "blake3"
      ]
    },
    "digest": {
      "type": "string",
      "minLength": 1
    },
    "target_ids": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "schema_version",
    "seal_id",
    "algorithm",
    "digest",
    "target_ids",
    "created_at"
  ]
}
