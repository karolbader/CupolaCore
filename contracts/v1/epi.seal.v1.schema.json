{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cupola.dev/contracts/v1/epi.seal.v1.schema.json",
  "title": "EPI Seal v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "epi.seal.v1"
    },
    "schema": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "pack_sha256": {
      "type": "string",
      "minLength": 1
    },
    "pack_files": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "rel_path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{64}$"
          }
        },
        "required": [
          "rel_path",
          "sha256"
        ]
      }
    },
    "replay": {
      "type": "object"
    }
  },
  "required": [
    "schema_version",
    "schema",
    "created_at",
    "pack_sha256",
    "pack_files",
    "replay"
  ]
}
